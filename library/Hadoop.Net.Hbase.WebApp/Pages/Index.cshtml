@page
@using System.Globalization
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.Color != null)
{
    <div class="text-center">
        <h1 class="display-4">Choose what color is simmilar</h1>
    </div>
    <form asp-page="/Index">
        <div class="row mb-2">
            <div class="col-sm" style="background-color: rgba(@Model.Color.R, @Model.Color.G, @Model.Color.B, @Model.Color.Alpha.ToString("0.00", CultureInfo.InvariantCulture))">
                <BR/>
                <BR/>
                <BR/>
            </div>
            <div class="col-sm">

                <input type="hidden" asp-for="UserColorForm.Color" value="@Model.Color.Key"/>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="UserColorForm.UserColor" value="red">
                    <label class="form-check-label" asp-for="UserColorForm.UserColor" style="color: red;">
                        Red
                    </label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="UserColorForm.UserColor" value="green">
                    <label class="form-check-label" asp-for="UserColorForm.UserColor" style="color: green;">
                        Green
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="UserColorForm.UserColor" value="blue">
                    <label class="form-check-label blue" asp-for="UserColorForm.UserColor" style="color: blue;">
                        Blue
                    </label>
                </div>


            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Send</button>
            </div>
        </div>
    </form>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Generate colors</h1>
    </div>
}
